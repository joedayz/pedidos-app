<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary_light</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary_accent</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>

    <style name="Theme.Main" parent="Base.Theme">

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarPopUp" parent ="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/theme_window_background</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary_light</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
    </style>

    <style name="btn_red_white" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/main_color_red</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/pad_10dp</item>
    </style>

</resources>
